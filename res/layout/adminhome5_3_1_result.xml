<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/title_de"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="2px"
                android:layout_height="24dip"
                android:layout_gravity="center"
                android:src="@drawable/v5_0_1_flipper_head_separator" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老干部局干部列表"
                android:textSize="35dp" />

            <HorizontalScrollView
                android:id="@+id/admin3spinner3resulths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="编号" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="用户名" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="姓名" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="联系方式" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="地址" />

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="操作" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/admin3spinner3resultbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/admin3spinner3resulths"
                android:layout_alignRight="@+id/admin3spinner3resulths"
                android:layout_below="@+id/admin3spinner3resulths"
                android:layout_marginTop="10dp"
                android:background="@drawable/v5_0_1_guide_button_blue_background"
                android:text="添加老干部局干部" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>