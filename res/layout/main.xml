<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/title_de"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="智慧关怀服务开关"
            android:textColor="#FFFFFF"
            android:textSize="25.0sp" />
    </RelativeLayout>

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="20dip"
        android:text="智慧关怀定位开关" 
        android:textSize="25sp"/>
    
    <RadioGroup
        android:id="@+id/clickGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/startServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="100dip"
            android:text="打开"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/stopServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dip"
            
            android:text="关闭"
            android:textColor="#000000" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="50dip"
        android:text="疑似跌倒报警开关" 
        android:textSize="25sp"/>

    <RadioGroup
        android:id="@+id/clickGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/startServiceButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="100dip"
            android:text="打开"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/stopServiceButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dip"
            android:text="关闭"
            android:textColor="#000000" />
    </RadioGroup>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="50dip"
        android:text="疑似静默报警开关" 
        android:textSize="25sp"/>

    <RadioGroup
        android:id="@+id/clickGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/startServiceButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="100dip"
            android:text="打开"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/stopServiceButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dip"
            android:text="关闭"
            android:textColor="#000000" />
    </RadioGroup>

    <Button
        android:id="@+id/backButton"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:background="@drawable/v5_0_1_guide_button_blue_background"
        android:text="返回登录"
        android:textColor="#FFFFFF"
        android:textSize="20.0sp" />

</LinearLayout>