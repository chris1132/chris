<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headtitle_linear"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="#663333"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton_usehome"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:background="@drawable/title_style"
            android:src="@drawable/btn1" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="24dip"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_separator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:layout_marginLeft="8dip"
            android:gravity="center_vertical"
            android:text="报警记录"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/buttons_table2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#99ffffff"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:background="@drawable/logo2"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/newbtn22"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn5_style"
                android:text="高温记录"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/newbtn23"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn6_style"
                android:text="跌倒记录"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:orientation="horizontal"
            android:gravity="center" >
            
            <Button
                android:id="@+id/newbtn21"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn4_style"
                android:text="SOS记录"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/newbtn24"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn10_style"
                android:text="静默记录"
                android:textColor="#ffffffff" />
        </TableRow>
    </TableLayout>

</LinearLayout>